<form class="form-horizontal form-label-left">
	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">Service name</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:name, :class => "form-control")%>
		</div>
	</div>
	<!-- <div class="form-group">
		 --><!-- <label class="control-label col-md-2 col-sm-2 col-xs-12">Shop ID</label> -->
		<!-- <div class="col-md-10 col-sm-10 col-xs-12"> -->
			<!-- <input class="form-control" disabled="disabled" placeholder=<%= @shop.id%> type="text"></input> -->
			<%= f.hidden_field(:shop_id, :class => "form-control", :value => @shop.id, :placeholder => @shop.id)%>
<!-- 
		</div>
	</div> -->

	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">Service</label>
		<div class="col-sm-10 col-xs-12">
			<%= f.collection_select :shop_service_type_id, ShopServiceType.order(:name).where(:service_type_id => @shop.service_type_id),:id,:name, include_blank: true %>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">Daily Cost</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:cost_daily, :class => "form-control")%>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">Monthly Cost</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:cost_monthly, :class => "form-control")%>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">3 Months Cost</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:cost_quartly, :class => "form-control")%>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">6 Months Cost</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:cost_halfyearly, :class => "form-control")%>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-md-2 col-sm-2 col-xs-12">1 Year Cost</label>
		<div class="col-md-10 col-sm-10 col-xs-12">
			<%= f.text_field(:cost_yearly, :class => "form-control")%>
		</div>
	</div>
</form>
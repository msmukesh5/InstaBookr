<!DOCTYPE html>
<html>
  <head>
    <title>InstaBookr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

    <% unless current_user %>
        <body class="<%= (['devise_invitable/registrations', 'sessions', 'invitations', 'users', 'confirmations','devise/passwords', 'devise/unlocks'].include? params[:controller]) ? '' : '' %>">
        <%= yield %>
    <% else %>
         <body class="nav-md">
            <div class="container body">
            <% flash.each do |key, value| %>
                <div align="center" id="flash" class="alert alert-<%= key %>"><%= value %></div>
            <% end %>

            <%= render "shared/sidenav" %>
            <%= render "shared/topnav" %>

            <%= yield %>

            <%= render "shared/footer" %>
            <%= javascript_include_tag 'footermanifest', 'data-turbolinks-track' => true %>
    <% end %>

  </body>
</html>
<!-- page content -->
<div class="right_col" role="main">
    <% if @user.is_super_user%>
        <div class="page-title">
            <div class="title_left">
                <h3>Shops List</h3>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Shops</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                   
                    <table id="datatable" class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">#</th>
                                <th class="column-title">Shop</th>
                                <th class="column-title">User Name</th>
                                <th class="column-title">Service</th>
                                <th class="column-title">Contact number</th>
                                <th class="column-title">Location</th>
                                <th class="column-title">Status</th>
                                <th class="column-title">Actions</th>
                            </tr>
                        </thead>


                        <tbody>
                            <% @shops.each do |obj| %>
                                <tr>
                                    <td><%= obj.id %></td>
                                    <td><%= obj.name %></td>
                                    <%usr = User.find(obj.user_id)%>
                                    <td><%= usr.first_name + usr.last_name %></td>
                                    <td><%= obj.service_type.name %></td>
                                    <td><%= usr.contact_number1 %></td>
                                    <td><%= obj.location.location%></td>
                                    <td><%= obj.status %></td>
                                    <td><% if obj.status == "Active" %>
                                            <%= link_to("Unconfirm", {:controller => 'shops', :action => 'confirm', :shop_id => obj.id, :confirmation => false}, :class => 'btn-danger btn') %>
                                        <%elsif obj.status == "UNCONFIRMED" %>
                                            <%= link_to("Confirm", {:controller => 'shops',:action => 'confirm', :shop_id => obj.id, :confirmation => true}, :class => 'btn-success btn') %>
                                        <%end%>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                  </div>
                </div>
            </div>
        </div>
    <% else %>
        <% if !@user.shops.empty? and @shops.status == "Active" %>
            <div class="page-title">
                <div class="title_left">
                    <h3>User booking list</h3>
                </div>
            </div>
            <div class="row">

                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Bookings</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                        
                        <table id="datatable" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">#</th>
                                    <th class="column-title">Name</th>
                                    <th class="column-title">Gender</th>
                                    <th class="column-title">Shop Name</th>
                                    <th class="column-title">Date and Time</th>
                                    <th class="column-title">Status</th>
                                    <th class="column-title">Contact number</th>
                                    <th class="column-title">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% @bookings.each do |obj| %>
                                    <tr>
                                        <td><%= obj.id %></td>
                                        <%usr = User.find(obj.user_id)%>
                                        <td><%= usr.first_name + usr.last_name %></td>
                                        <td><%= usr.gender %></td>
                                        <td><%= obj.shop.name%></td>
                                        <td><%= obj.date%></td>
                                        <td><%= obj.status %></td>
                                        <td><%= usr.contact_number1%></td>
                                        <td><button class="btn-success btn">Confirm</button>
                                                    <button class="btn-info btn">Served</button>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                      </div>
                    </div>
                </div>
            </div>
        <% else %>
            <!-- user has no shops so there would be link to create a shop initially -->
            <%= render '/home/shop_creation_link' %>
        <% end %>
    <% end %>
</div>
<!-- /page content -->

<!--Test Page specific JS -->
<!-- Datatables -->
    <script> 
      $(document).ready(function() {
        var handleDataTableButtons = function() {
          if ($("#datatable-buttons").length) {
            $("#datatable-buttons").DataTable({
              dom: "Bfrtip",
              buttons: [
                {
                  extend: "copy",
                  className: "btn-sm"
                },
                {
                  extend: "csv",
                  className: "btn-sm"
                },
                {
                  extend: "excel",
                  className: "btn-sm"
                },
                {
                  extend: "pdfHtml5",
                  className: "btn-sm"
                },
                {
                  extend: "print",
                  className: "btn-sm"
                },
              ],
              responsive: true
            });
          }
        };

        TableManageButtons = function() {
          "use strict";
          return {
            init: function() {
              handleDataTableButtons();
            }
          };
        }();

        $('#datatable').dataTable();

        $('#datatable-keytable').DataTable({
          keys: true
        });

        $('#datatable-responsive').DataTable();

        $('#datatable-scroller').DataTable({
          ajax: "js/datatables/json/scroller-demo.json",
          deferRender: true,
          scrollY: 380,
          scrollCollapse: true,
          scroller: true
        });

        $('#datatable-fixed-header').DataTable({
          fixedHeader: true
        });

        var $datatable = $('#datatable-checkbox');

        $datatable.dataTable({
          'order': [[ 1, 'asc' ]],
          'columnDefs': [
            { orderable: false, targets: [0] }
          ]
        });
        $datatable.on('draw.dt', function() {
          $('input').iCheck({
            checkboxClass: 'icheckbox_flat-green'
          });
        });

        TableManageButtons.init();
      });
    </script>
    <!-- /Datatables -->